version: "3.8"

services:
  sidekiq-{{ item.name }}:
    image: ${APP_IMAGE_NAME}:${APP_IMAGE_TAG}
    command: ["bundle", "exec", "sidekiq", {{ item.queues | map('regex_replace', '^(.*)$', '"-q", "\\1"') | join(', ') }}, "-c", "{{ item.concurrency }}"]
    deploy:
      placement:
        constraints:
          - "node.labels.sidekiq == true"
      update_config:
        order: "start-first"
        parallelism: 1
    environment:
{% if is_development == true %}
      APP_UID: ${UID:-1000}
      APP_GID: ${GID:-1000}
{% endif %}
      DATABASE_NAME: ${DATABASE_NAME}
      DATABASE_PASSWORD: /run/secrets/database_password
      DATABASE_USER: ${DATABASE_USER}
      DB_POOL: {{ item.concurrency }}
      APP_URL: ${APP_URL}
      APP_IMAGE_TAG: ${APP_IMAGE_TAG}
      RAILS_ENV: ${APP_RAILS_ENV}
      REDIS_SIDEKIQ_USER: ${REDIS_SIDEKIQ_USER}
      REDIS_SIDEKIQ_PASSWORD: ${REDIS_SIDEKIQ_PASSWORD}
      REDIS_URL: "redis://redis:${REDIS_PORT}/0"
      SOLR_INSTANCES: "{{ solr_instances }}"
      SOLR_URL: "${SOLR_URL}"
    healthcheck:
      test:
        [
          "CMD-SHELL",
          "ps aux | grep '[s]idekiq 7' || exit 1",
        ]
      interval: 30s
      retries: 3
      start_period: 1m
      timeout: 30s
    logging:
      driver: json-file
      options:
        max-file: "3"
        max-size: "10m"
    networks:
      - postgres
      - redis
      - traefik
    secrets:
      - alma_api_key
      - database_password
      - source: rails_master_key
        target: /home/app/config/credentials/${RAILS_ENV}.key
        uid: "1000"
        gid: "1000"
        mode: 0440
      - redis_sidekiq_password
      - sftp_username
      - sftp_password
      - slack_webhook_url
      - solr_username
      - solr_password
{% if is_development == false %}
      - honeybadger_api_key
{% endif %}
    volumes:
{% if is_development == true %}
      - /catalog-indexing/ansible/roles/catalog-indexing/files/src/:/home/app
{% else %}
      - app_storage:/home/app/storage
{% endif %}

networks:
  postgres:
    external: true
  redis:
    external: true
  traefik:
    external: true

secrets:
  alma_api_key:
    external: true
    name: ${ALMA_API_KEY}
  database_password:
    external: true
    name: ${DATABASE_PASSWORD}
  rails_master_key:
    external: true
    name: ${RAILS_MASTER_KEY}
  redis_sidekiq_password:
    external: true
    name: ${REDIS_SIDEKIQ_PASSWORD}
  sftp_username:
    external: true
    name: ${SFTP_USERNAME}
  sftp_password:
    external: true
    name: ${SFTP_PASSWORD}
  slack_webhook_url:
    external: true
    name: ${SLACK_WEBHOOK_URL}
  solr_username:
    external: true
    name: ${SOLR_USERNAME}
  solr_password:
    external: true
    name: ${SOLR_PASSWORD}
{% if is_development == false %}
  honeybadger_api_key:
    external: true
    name: ${HONEYBADGER_API_KEY}
{% endif %}

{% if is_development == false %}
volumes:
  app_storage:
    external: true
    name: app_storage
{% endif %}
