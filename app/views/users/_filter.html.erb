<section class="my-4">
  <%= bootstrap_form_tag(url: users_path, method: 'get') do |form| %>
    <div class="row align-items-end">
      <div class="col-md-3 col-lg-2">
        <%= form.select 'filter[status]',
                        options_for_select([['Active', 1], ['Inactive', 0]], selected: params.dig('filter', 'status')),
                        include_blank: true,
                        label: 'Status'
        %>
      </div>
      <div class="col my-3 d-flex align-items-center">
        <%= form.submit 'Filter', name: nil, class: 'btn btn-primary' %>
        <%= link_to '', users_path, name: nil, class: 'btn btn-close btn-sm ms-3' %>
      </div>
    </div>
  <% end %>
</section>