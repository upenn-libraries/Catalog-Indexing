<nav aria-label="breadcrumb" class="mb-3 bg-light text-dark rounded">
  <ol class="breadcrumb py-2 px-3">
    <li class="breadcrumb-item"><a href="<%= root_path %>">Home</a></li>
    <li class="breadcrumb-item"><a href="<%= users_path %>">Users</a></li>
    <li class="breadcrumb-item active" aria-current="page"><%= @user.id %></li>
  </ol>
</nav>

<h1>User Summary</h1>
<div class="container">
  <div class="row">
  <dl class="user-list">
    <dt class="col-sm-3">Email</dt>
    <dd class="col-sm-9 email"><%= @user.email %></dd>

    <dt class="col-sm-3">Created At</dt>
    <dd class="col-sm-9 created-at"><%= @user.created_at.to_fs(:display) %></dd>

    <dt class="col-sm-3">Active Status</dt>
    <dd class="col-sm-9 active"><%= @user.active ? 'Active' : 'Inactive' %></dd>
  </dl>
  </div>
</div>
