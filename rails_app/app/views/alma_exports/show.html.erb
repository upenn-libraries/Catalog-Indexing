<nav aria-label="breadcrumb" class="mb-3 bg-light text-dark rounded">
  <ol class="breadcrumb py-2 px-3">
    <li class="breadcrumb-item"><a href="<%= root_path %>">Home</a></li>
    <li class="breadcrumb-item"><a href="<%= alma_exports_path %>">Alma Exports</a></li>
    <li class="breadcrumb-item active" aria-current="page"><%= @alma_export.id %></li>
  </ol>
</nav>

<div class="container">
  <h1 class="mb-4">Alma Export: <%= @alma_export.id %></h1>

  <!-- Basic Export Information -->
  <div class="card mb-4 export-info">
    <div class="card-header">
      <h2 class="h5 mb-0">Export Details</h2>
    </div>
    <div class="card-body">
      <div class="row g-3">
        <div class="col-md-3">
          <div class="border rounded p-3">
            <strong>ID:</strong> <%= @alma_export.id %><br>
            <strong>Source:</strong> <%= @alma_export.alma_source %><br>
            <strong>Status:</strong> <span class="badge bg-secondary"><%= @alma_export.status.titleize %></span><br>
            <strong>Full Export:</strong> <%= @alma_export.full.to_s.titleize %>
          </div>
        </div>
        <div class="col-md-9">
          <div class="border rounded p-3">
            <h3 class="h6 mb-3">Target Collections</h3>
            <% if @alma_export.target_collections.any? %>
              <ul class="list-unstyled mb-0">
                <% @alma_export.target_collections.each do |collection| %>
                  <li><i class="bi bi-collection"></i> <%= collection %></li>
                <% end %>
              </ul>
            <% else %>
              <p class="mb-0">None</p>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Catalog Indexing Information -->
  <div class="card mb-4 indexing-info">
    <div class="card-header">
      <h2 class="h5 mb-0">Indexing Progress</h2>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered">
          <thead class="table-light">
          <tr>
            <th>Started At</th>
            <th>Completed At</th>
            <th>Created At</th>
            <th>Updated At</th>
          </tr>
          </thead>
          <tbody>
          <tr>
            <td><%= @alma_export.started_at&.to_fs(:display) || 'Not Started' %></td>
            <td><%= @alma_export.completed_at&.to_fs(:display) || 'Not Completed' %></td>
            <td><%= @alma_export.created_at.to_fs(:display) %></td>
            <td><%= @alma_export.updated_at.to_fs(:display) %></td>
          </tr>
          </tbody>
        </table>
      </div>

      <h3 class="h6 mb-3">Files Status</h3>
      <%= render 'progress' %>
      <% unless @alma_export.batch_files.empty? %>
        <div class="mt-4">
          <%= link_to "Show Batch Files", alma_export_batch_files_path(@alma_export), class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Alma Publish Job Information -->
  <div class="card mb-4 job-info">
    <div class="card-header">
      <h2 class="h5 mb-0">Job Details</h2>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered">
          <thead class="table-light">
          <tr>
            <th>Job ID</th>
            <th>Started At</th>
            <th>Ended At</th>
            <th>Duration</th>
          </tr>
          </thead>
          <tbody>
          <tr>
            <td><%= @alma_export.job_identifier %></td>
            <td><%= @alma_export.job_started_at&.to_fs(:display) %></td>
            <td><%= @alma_export.job_ended_at&.to_fs(:display) %></td>
            <td><%= @alma_export.job_duration %></td>
          </tr>
          </tbody>
        </table>
      </div>

      <h3 class="h6 mb-3">Webhook Response</h3>
      <pre class="bg-light p-3 rounded"><%= JSON.pretty_generate @alma_export.webhook_body %></pre>
    </div>
  </div>
</div>